<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="Orientation"
            android:padding="10dp">

            <ImageView
                android:id="@+id/recipe_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/recipe_image_border"
                android:src="@drawable/default_image"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/recipe_image"
                tools:ignore="MissingConstraints">

                <EditText
                    android:id="@+id/recipe_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/et_style"
                    android:hint="@string/recipe_name" />

                <EditText
                    android:id="@+id/preparation_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/et_style"
                    android:hint="@string/preparation_time" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/spinner_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/text"
                tools:ignore="MissingConstraints">

                <com.example.cookit_app.ui.MultiSpinner
                    android:id="@+id/tags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:background="@drawable/et_style"/>

                <com.example.cookit_app.ui.MultiSpinner
                    android:id="@+id/meal_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/et_style"/>

            </LinearLayout>

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/add_components_rv"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/spinner_layout"/>

            <ImageButton
                android:id="@+id/add_component_ib"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_add_24"
                app:layout_constraintBottom_toTopOf="@+id/recipe_details"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_components_rv" />

            <EditText
                android:id="@+id/recipe_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_style"
                android:minHeight="200dp"
                app:layout_constraintTop_toBottomOf="@+id/add_component_ib"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="10dp" />

            <com.google.android.material.button.MaterialButton
                style="?attr/materialButtonOutlinedStyle"
                android:id="@+id/upload_recipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="@string/upload_recipe"
                app:layout_constraintTop_toBottomOf="@+id/recipe_details"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/purple_700"
                app:strokeColor="@color/purple_500" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>