<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="Orientation"
            android:padding="10dp">

            <ImageView
                android:id="@+id/recipe_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/recipe_image_border"
                android:src="@drawable/default_image"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/recipe_image"
                tools:ignore="MissingConstraints">

                <EditText
                    android:id="@+id/recipe_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/et_style"
                    android:hint="@string/recipe_name" />

                <EditText
                    android:id="@+id/preparation_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/et_style"
                    android:hint="@string/preparation_time" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:padding="10dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/text"
                tools:ignore="MissingConstraints">

                <Spinner
                    android:id="@+id/tags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:background="@drawable/et_style"/>

                <Spinner
                    android:id="@+id/meal_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:textSize="30sp"
                    android:background="@drawable/et_style"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Recipe_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/linear_spinner"
                tools:ignore="MissingConstraints">

            </LinearLayout>

            <EditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="150dp"
                app:layout_constraintTop_toBottomOf="@+id/Recipe_ingredients"
                tools:ignore="MissingConstraints"
                android:background="@drawable/et_style">

            </EditText>

            <com.google.android.material.button.MaterialButton
                style="?attr/materialButtonOutlinedStyle"
                android:id="@+id/upload_recipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:text="@string/upload_recipe"
                app:layout_constraintTop_toBottomOf="@+id/edit_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/purple_700"
                app:strokeColor="@color/purple_500" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>