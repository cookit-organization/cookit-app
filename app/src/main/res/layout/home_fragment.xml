<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@mipmap/ic_launcher"
        app:strokeWidth="2dp"
        app:strokeColor="@color/purple_700"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.circleImageView"/>

    <TextView
        android:id="@+id/profile_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/profile_image"
        android:text="@string/for_example"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profile_bio_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/for_example"
        android:layout_below="@id/profile_name_tv"
        android:layout_toEndOf="@id/profile_image"
        android:layout_marginStart="10dp"/>

    <include
        android:id="@+id/rate_stars"
        layout="@layout/include_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_bio_tv"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/profile_image" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/rate_stars"
        android:layout_marginTop="10dp"
        android:background="@color/purple_700" />

    <GridLayout
        android:id="@+id/profile_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:columnCount="2"
        android:useDefaultMargins="true">

        <com.google.android.material.button.MaterialButton
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="160dp"
            android:text="@string/saved"
            android:textColor="@color/teal_200"
            app:icon="@drawable/ic_saved"
            app:strokeColor="@color/teal_200" />

        <com.google.android.material.button.MaterialButton
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="160dp"
            android:text="@string/my_recipes"
            android:textColor="@color/teal_200"
            app:icon="@drawable/ic_saved"
            app:strokeColor="@color/teal_200" />

        <com.google.android.material.button.MaterialButton
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="160dp"
            android:text="@string/recent"
            android:textColor="@color/teal_200"
            app:icon="@drawable/ic_saved"
            app:strokeColor="@color/teal_200" />

        <com.google.android.material.button.MaterialButton
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="160dp"
            android:text="@string/trending"
            android:textColor="@color/teal_200"
            app:icon="@drawable/ic_saved"
            app:strokeColor="@color/teal_200" />

    </GridLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_buttons">
        <!-- This LinearLayout â¤µ contains the categories the user wants-->
        <LinearLayout
            android:id="@+id/wanted_categories_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</RelativeLayout>